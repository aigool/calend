<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @event.title %>
</p>

<p>
  <b>Shedule:</b>
  <%= @event.shedule %><br>
</p>

<p>
  <b>Repeat:</b>
  <%= @event.repeat %>
</p>

<p>
  <b>User:</b>
  <%= @event.user.email %>
</p>


<% if @event.user == current_user %>
	<%= link_to 'Edit', edit_event_path(@event) %> |
	<%= link_to 'Delete', @event, confirm: 'Are you sure?', method: :delete %> |
<% end %>
<%= link_to 'Back', events_path %>
